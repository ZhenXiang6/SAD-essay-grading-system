# Gemini API 設定
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent

# Flask 設定
FLASK_ENV=production
FLASK_DEBUG=False

# 應用程式設定
UPLOAD_FOLDER=static/uploads
OUTPUT_FOLDER=static/outputs

# OCR 模型設定 (相對於 Backend 目錄)
OCR_MODEL_PATH=./checkpoints/resnet18_ft_100epoch.pth
OCR_CLASS_PATH=./checkpoints/class_to_idx.json

# 圖片處理設定
GRID_TOLERANCE=10
MAX_SKEW=20.0
ANGLE_THRESHOLD=5.0
